<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="20dp"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imageScan"
        android:src="@color/teal_700"
        android:layout_width="60dp"
        android:layout_height="60dp"></ImageView>

    <TextView
        android:id="@+id/textScanTitle"
        android:layout_toRightOf="@id/imageScan"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="name"/>

    <TextView
        android:id="@+id/textScanSub"
        android:layout_toRightOf="@id/imageScan"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textScanTitle"
        android:maxLength="50"
        android:singleLine="true"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="sub"/>
    <Button
        android:id="@+id/delBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textScanTitle"
        android:layout_marginLeft="20dp"
        android:text="Delete"></Button>



</RelativeLayout>