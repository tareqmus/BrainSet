<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timer">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="265dp"
        android:layout_height="216dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/clock"
        android:backgroundTint="#00BCD4" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="How long do you want to study?"
        android:layout_below="@id/imageView"
        android:layout_marginTop="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="50sp"
        android:layout_below="@id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="18sp"
        android:layout_below="@id/focusTimeBtn"
        android:layout_marginStart="50dp"
        android:textColor="#333333"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:textSize="18sp"
        android:layout_alignTop="@id/start"
        android:layout_toEndOf="@id/start"
        android:textColor="#333333"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pause"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/reset"
        android:text="Resume"
        android:textColor="#333333"
        android:textSize="18sp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:text="Reset"
        android:textColor="#333333"
        android:textSize="18sp" />

    <Button
        android:id="@+id/focusTimeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countdown_timer"
        android:layout_marginLeft="90dp"
        android:text="Start Focus Time"
        android:textColor="#333333"
        android:textSize="18sp" />

</RelativeLayout>
